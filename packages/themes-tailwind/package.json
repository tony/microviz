{
  "name": "@microviz/themes-tailwind",
  "description": "Tailwind v4 theme adapter for microviz tokens.",
  "version": "0.1.0-next.0",
  "type": "module",
  "files": ["*.css"],
  "exports": {
    ".": "./microviz.css",
    "./microviz.css": "./microviz.css"
  },
  "sideEffects": ["*.css"],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "scripts": {
    "check": "echo 'NOOP'",
    "type-check": "echo 'NOOP'",
    "test": "echo 'NOOP'",
    "lint": "biome lint .",
    "biome": "biome",
    "format": "pnpm run biome check . --write; pnpm run biome format . --write",
    "update": "pnpm update",
    "ncu": "ncu"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10"
  },
  "engines": {
    "node": ">=18"
  }
}
