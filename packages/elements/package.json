{
  "name": "@microviz/elements",
  "description": "Web Components for micro-visualizations.",
  "version": "0.1.0-next.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/elements.js"
    },
    "./cdn": {
      "types": "./dist/index.d.ts",
      "import": "./dist/cdn/microviz.js"
    }
  },
  "jsdelivr": "./dist/cdn/microviz.js",
  "unpkg": "./dist/cdn/microviz.js",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@microviz/core": "workspace:*",
    "@microviz/renderers": "workspace:*"
  },
  "scripts": {
    "clean": "rimraf dist",
    "distclean": "rimraf dist node_modules",
    "check": "tsc -p tsconfig.check.json --noEmit",
    "type-check": "tsc -p tsconfig.check.json --noEmit",
    "build": "vite build",
    "build:cdn": "vite build --config vite.cdn.config.ts",
    "build:all": "pnpm build && pnpm build:cdn",
    "build:watch": "pnpm build --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "biome lint .",
    "biome": "biome",
    "format": "pnpm run biome check . --write; pnpm run biome format . --write",
    "update": "pnpm update",
    "ncu": "ncu"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "happy-dom": "^20.1.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  }
}
