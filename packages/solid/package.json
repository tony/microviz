{
  "name": "@microviz/solid",
  "description": "Solid.js wrappers for microviz charts.",
  "version": "0.1.0-next.0",
  "type": "module",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/solid.js"
    }
  },
  "sideEffects": false,
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "solid-js": "^1.8.0"
  },
  "dependencies": {
    "@microviz/core": "workspace:*",
    "@microviz/renderers": "workspace:*"
  },
  "scripts": {
    "clean": "rimraf dist",
    "distclean": "rimraf dist node_modules",
    "check": "tsc -p tsconfig.check.json --noEmit",
    "type-check": "tsc -p tsconfig.check.json --noEmit",
    "build": "vite build",
    "build:watch": "pnpm build --watch",
    "test": "echo 'NOOP'",
    "lint": "biome lint .",
    "biome": "biome",
    "format": "pnpm run biome check . --write; pnpm run biome format . --write",
    "update": "pnpm update",
    "ncu": "ncu"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "rimraf": "^6.1.2",
    "solid-js": "^1.9.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.6"
  },
  "engines": {
    "node": ">=18"
  }
}
